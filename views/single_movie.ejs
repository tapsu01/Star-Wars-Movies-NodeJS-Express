<!DOCTYPE html>
<html lang="en">
    <head>
        <% include partials/head.ejs %>
    </head>
    <body>
        <% include partials/header.ejs %>
        <div id="hero-image-single" style="background-image: url('/images/<%= movie.hero_image %>')">
            <h1 id="hero-title"><%= movie.title %></h1>
        </div>

        <div class="content-padding clearfix">
            <div class="poster-wrapper">
                <img src="/images/<%= movie.poster %>" alt="">
            </div>

            <div class="description-wrapper">
                <div class="description">
                    <h1 class="movie-header">Description</h1>
                    <p><%= movie.description %></p>
                </div>

                <div class="main-characters">
                    <h1 class="movie-header">Main Characters</h1>
                    <ul>
                        <% for (var i = 0; i < movie.main_characters.length; i++) { %>
                        <li><%= movie.main_characters[i] %></li>
                        <% } %>
                    </ul>
                </div>
            </div>

        </div>
        
        <% include partials/scripts.ejs %>
    </body>
</html>