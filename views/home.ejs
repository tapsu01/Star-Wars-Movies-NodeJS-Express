<!DOCTYPE html>
<html lang="en">
    <head>
        <% include partials/head.ejs %>
    </head>
    <body>
        <% include partials/header.ejs %>
        <div id="hero-image">
            <h1 id="hero-title"><%= title %></h1>
        </div>
        <!-- /#hero-image -->

        <div id="posters-wrapper" class="content-padding clearfix">
            <% for (var i = 0; i < movies.length; i++) { %>
            <div class="poster">
                <a href="/star_wars_episode/<%= i %>">
                    <img src="/images/<%= movies[i].poster %>" class="img-responsive" />
                </a>
            </div>
            <% } %>
        </div>
        <!-- /.#posters-wrapper -->
        
        <% include partials/scripts.ejs %>
    </body>
</html>